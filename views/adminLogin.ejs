<!DOCTYPE html>
<html>
<head>
    <title>Node.js express mongDB CRUD</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<script type="text/javascript">
    function validate(){ 
        var Email = document.getElementById('Emailid').value;
        var Password = document.getElementById('passid').value;
  
        if(Email == "" && Password!== "" ){
          document.getElementById('emailError').innerHTML = "Please fill the Email field"
          return false
      }else if(Password == "" && Email!== ""){
          document.getElementById('passError').innerHTML = "Please fill the Password field"
          return false
      }else if(Email == "" && Password == ""){
          document.getElementById('passError').innerHTML = "Please fill the Password field"
          document.getElementById('emailError').innerHTML = "Please fill the Email field"
          return false
      }else{
          return true
      }
      }
  </script>

<body class="bg-info">
    <div class="row">
        <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
          <h3>Admin Login</h3>

<form action="/admin/" method="POST" autocomplete="off" onsubmit="return validate()">
  <div class="form-group">
      <label>Email</label>
      <input id="Emailid" type="text" class="form-control" name="Email" placeholder="Email" value="">
      <div id="emailError" style="color: red;"></div>
  </div>
  <div class="form-group">
      <label>Password</label>
      <input type="password" id="passid" class="form-control" name="Password" placeholder="Password" value="">
      <div id="passError" style="color: red;"></div>
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
  </div>
